pipeline 
{
  agent { dockerfile true }
     
stages
    {
     stage('Test')
        {
            steps{
            echo 'iniciando   prueba'
            }
        } 
        stage('Build')
        {
            
            steps
                {
                    echo 'pruebaa   aa'
                }
        }
         stage('Deploy')
        {
                steps
                {
                    Image.run('-p 8000:8085')
                    echo 'deploy '
                }
        }
    }
}



