pipeline {
    agent { dockerfile{
        additionalBuildArgs  '-t mi_imagen:${BUILD_NUMBER}'
        args '-p 9000:8085 '
    } }
    stages {
        stage('Build') {
            steps {
                echo 'Esto es una Construccion'
            }
        }
        stage('Test') {
            steps {
                echo 'Esto es una   Prueba'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Esto es un despliegue'
            }
        }
    }
}