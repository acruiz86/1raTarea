pipeline {
    agent {
  dockerfile {
    additionalBuildArgs  '--build-arg \'-t mi_imagen:1${BUILD_NUMBER}\''
    args '-p 8000:8085'
    dir '.'
    filename 'Dockerfile'
    reuseNode true
  }
}
    stages {
        stage('Build') {
            steps {
                sh 'python --version'    
            }
        }
         stage('Test') {
            steps {
                sh 'python --version'    
            }
        }
         stage('Deploy') {
            steps {
                sh 'python --version' 
                echo " Desplegado   correctamente"   
            }
        }
    }
}
