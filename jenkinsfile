pipeline 
{
  agent { dockerfile{
         filename 'Dockerfile'
        dir '.'
        additionalBuildArgs  '--build-arg version=1.0.2'
        args '-p 8000:8085'
        reuseNode true
  }}
     
stages{
     stage('Test'){
            steps{
            echo 'iniciando   prueba'
            }
        } 
        stage('Build'){
            
            steps{
                    echo 'pruebaa   aa'
                }
        }
         stage('Deploy'){
                steps{
                    sh 'docker info'
                }
        }
    }
}



