pipeline 
{
    agent none
   
stages
    {
     stage('test')
        {
            steps{
            echo 'iniciando  prueba'
            }
        } 
        stage('BUILD')
        {
            agent
                {
                    dockerfile
                        {
                            additionalBuildArgs  '--build-arg version=1.0'
                            args '-d -p 8000:8005 '
                        }
                 } 
            steps
                {
                    echo 'pruebaa aa'
                }
        }
    }
}



