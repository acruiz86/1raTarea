pipeline 
{
    agent any
   
stages
    {
     stage('test')
        {
            steps{
            echo 'iniciando   prueba'
            }
        } 
        stage('BUILD')
        {
            agent
                {
                    dockerfile
                        {   filename 'Dockerfile'
                            additionalBuildArgs  '--build-arg version=1.0'
                            args '-p 9000:8085 '
                        }
                 } 
            steps
                {
                    echo 'pruebaa   aa'
                }
        }
         stage('deploy')
        {
                steps
                {
                    echo 'deploy '
                }
        }
    }
}



