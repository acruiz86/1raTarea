pipeline 
{
    agent any
   
stages
    {
     stage('test')
        {
            steps{
            echo 'iniciando   prueba'
            }
        } 
        stage('BUILD')
        {
            agent
                {
                    dockerfile
                        {   
                            additionalBuildArgs  '--build-arg version=1.0'
                            args '-p 9000:8005 '
                        }
                 } 
            steps
                {
                    echo 'pruebaa aa'
                }
        }
    }
}



