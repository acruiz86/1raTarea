pipeline {
agent any

 parameters {
    string(name:'container_name',defaultValue:'flask_proyect',description:'Nombre del contenedor')
    string(name:'image_name',defaultValue:'flask_image',description:'Nombre de la imagen')
    string(name:'container_port',defaultValue:'80',description:'Puerto que usa el contenedor')
 }
stages {
            stage('install')
            {
                steps
                {
                    git branch:'master',url:'https://github.com/acruiz86/1raTarea.git'
                    dir('1raTarea')
                    echo "paso instalacion"
                }
            }
            stage('test')
            {
                steps
                {
                    
                    dir('1raTarea')
                    echo "paso Test"
                }
            }
             stage('build')
            {
                steps
                {
                    
                    dir('1raTarea')
                    echo "paso build"
                }
            }
            stage('deploy')
            {
                steps
                {
                    
                    dir('1raTarea')
                    echo "paso deploy"
                }
            }
           

        }
}


